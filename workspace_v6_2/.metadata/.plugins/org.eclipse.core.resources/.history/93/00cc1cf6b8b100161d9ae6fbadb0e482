#include "driver_lcd.h"
#include "HAL\hal_gpio.h"
#include "HAL\hal_usciB1.h"


extern USCIB1_SPICom SpiCom;
extern unsigned char cmdArr[];

unsigned char InitArr[9] = {LCD_RESET, LCD_BIAS, ADC_SEL_NORMAL, COMMON_REVERSE, RES_RATIO, ELEC_VOL_MODE, ELEC_VOL_VALUE, POWER_CONT, DISPLAY_ON};

void Driver_LCD_WriteCommand(unsigned char *data, unsigned char len)
{
	int i = 0;
	command;

	for(i = 0; i <= len; i++)
	{
		SpiCom.TxData.Data[i] = *data;
		data++;
	}

	SpiCom.TxData.len = len;
	if(SpiCom.Status.B.TXSuc==1)
	{
		HAL_USCIB1_Transmit();
	}
	while (SpiCom.Status.B.Tsuc==0)
	{
		command;
	}
	LCD_data;

}

void Driver_LCD_Init(void)
{
	LCD_RESET_L;
	__delay_cycles(100000);
	LCD_RESET_H;
	Driver_LCD_WriteCommand(&InitArr[0], 9);

	__delay_cycles(100000);

	//LCD Clear
}

void Driver_LCD_Clear(void)  //test Sebo
{
	LCD_data;
	int c_p=1;
	int c_c;
	unsigned char column = 0;
	unsigned char column_Lsb;
	unsigned char column_Msb;
	column_Msb = column&0xF0;
	column_Lsb = column&0x0F;
	static unsigned char initArr[4] = {DISPLAY_line_start,DISPLAY_Page,DISPLAY_col_msb,DISPLAY_col_lsb};

	Driver_LCD_WriteCommand(&initArr[0],4);
	SpiCom.TxData.len=0x83;
	HAL_USCIB1_Transmit();
	while (c_p <= 7)
	{
			if(SpiCom.Status.B.TXSuc==1)
			{
				c_p++;
				initArr[1]=DISPLAY_Page+c_p;
				Driver_LCD_WriteCommand(&initArr[1],3);
				SpiCom.TxData.len=0x83;
				HAL_USCIB1_Transmit();
			}

	}



}

void Driver_LCD_SetPosition(unsigned char page, unsigned char col)
{

}
